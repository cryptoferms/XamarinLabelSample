<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:custom="clr-namespace:XamarinLabelSample;assembly=XamarinLabelSample"
             mc:Ignorable="d"
             x:Class="XamarinLabelSample.MainPage"
             BackgroundColor="Azure">

    <StackLayout>
        <custom:LabelFix Text="Olá sou uma página de teste de Texto e não importa o que você faça não irei trocar de tamanho :)"
           TextColor="Blue"
           FontSize="20"
           VerticalOptions="Center" />
        <custom:EntryStyle Placeholder="Exemplo Entry Cell"
               PlaceholderColor="Red"></custom:EntryStyle>
      
        <custom:ButtonStyle Text="clique em mim!"
                BackgroundColor="Red"
            HorizontalOptions="Center"
                VerticalOptions="StartAndExpand"></custom:ButtonStyle>
        <Label Text="Sou uma Label Normal"
               FontSize="Body"
               FontAttributes="Bold"
               TextColor="OrangeRed"
               VerticalTextAlignment="Center"
               VerticalOptions="StartAndExpand"
               HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>

